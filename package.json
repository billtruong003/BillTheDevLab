{
  "name": "billthedevlab",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "turbo run dev",
    "start": "turbo run start",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "dev:web": "cd apps/web && npm run dev",
    "dev:backend": "cd apps/backend && npm run start:dev",
    "db:migrate": "cd apps/backend && npm run migration:run",
    "db:generate": "cd apps/backend && npm run migration:generate",
    "clean": "turbo run clean && rm -rf node_modules",
    "setup": "bash setup.sh"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "npm@10.8.0"
}
